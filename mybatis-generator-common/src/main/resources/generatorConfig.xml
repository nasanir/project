<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <classPathEntry location="D:\tools\mysql-connector-java-8.0.12.jar"/>
    <context id="context1">
        <!-- 是否生成注释 -->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/blog_sy"
                        userId="root" password="lyz1122" />

        <!-- 生成的包名和工程名 -->
        <javaModelGenerator targetPackage="pers.nasanir.fountain.manager.menu.entity"
                            targetProject="src/main/java"/>
        <sqlMapGenerator targetPackage="pers.nasanir.fountain.manager.menu.entity"
                         targetProject="src/main/java" />
        <javaClientGenerator targetPackage="pers.nasanir.fountain.manager.menu.entity"
                             targetProject="src/main/java" type="XMLMAPPER" />

        <!-- 数据库表 -->
        <table  tableName="blog_user" domainObjectName="blog_user">
            <!-- 设置别名 -->
            <!--
            <columnOverride column="ds_id" property="dsId" />
            <columnOverride column="ds_name" property="dsName" />
            <columnOverride column="dt_name" property="dtName" />
            <columnOverride column="login_name" property="loginName" />
            <columnOverride column="login_pwd" property="loginPwd" />
             -->
        </table>
    </context>
</generatorConfiguration>